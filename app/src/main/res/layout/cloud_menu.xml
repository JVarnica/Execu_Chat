<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main content -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <!-- Top app bar with logo (hamburger / logo button) -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/menuBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/menu_description"
                    android:src="@android:drawable/ic_menu_more" />

                <TextView
                    android:id="@+id/toolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/toolbar_name"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/memUsage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:text="-- MB"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>
        <!-- Chat bubbles -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messagesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="#F5F5F5" />

        <TextView
            android:id="@+id/statsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="11sp"
            android:textColor="#666666"
            android:gravity="center"
            android:visibility="gone"
            android:background="@android:color/white" />

        <!-- Progress bar -->
        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/researchPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1E1E2E"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="gone">

            <!-- Header row: icon + title + cancel button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp">

                <TextView
                    android:id="@+id/researchTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="ðŸ”¬ Deep Research"
                    android:textColor="#E0E0FF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/researchCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="âœ•"
                    android:textColor="#888899"
                    android:textSize="18sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="4dp"
                    android:clickable="true"
                    android:focusable="true" />
            </RelativeLayout>

            <!-- Progress bar (horizontal, determinate) -->
            <ProgressBar
                android:id="@+id/researchProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginBottom="6dp"
                android:max="100"
                android:progress="0"
                android:progressTint="#7C6CF0"
                android:progressBackgroundTint="#333344" />

            <!-- Phase status line (e.g. "ðŸ” Searching (2/4): melon cake recipes") -->
            <TextView
                android:id="@+id/researchStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Startingâ€¦"
                android:textColor="#CCCCDD"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="4dp" />

            <!-- Counters row: sources found | summaries done -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/researchSources"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“š 0 sources"
                    android:textColor="#9999AA"
                    android:textSize="12sp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/researchSummaries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ 0 summaries"
                    android:textColor="#9999AA"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Chat transcript area -->

        <LinearLayout
            android:id="@+id/inputBarWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="#1A1A1A">

            <!-- Tool chip (shown when a tool is active) -->
            <LinearLayout
                android:id="@+id/toolChipContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="2dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@drawable/bg_tool_chip"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/toolChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:text="ðŸ” Search  âœ•" />
            </LinearLayout>

            <!-- Input row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="6dp">

                <!-- Plus button (opens tool menu) -->
                <ImageButton
                    android:id="@+id/plusBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_input_add"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Tools"
                    android:scaleType="centerInside"
                    android:layout_marginEnd="4dp" />

                <!-- Text input -->
                <EditText
                    android:id="@+id/input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Message..."
                    android:textColorHint="#888888"
                    android:textColor="#FFFFFF"
                    android:background="@android:color/transparent"
                    android:inputType="textMultiLine"
                    android:maxLines="4"
                    android:padding="10dp" />

                <!-- Send button -->
                <ImageButton
                    android:id="@+id/sendBtn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@android:drawable/ic_menu_send"
                    android:background="@drawable/bg_message_user"
                    android:contentDescription="Send"
                    android:scaleType="centerInside" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/leftDrawer"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="?attr/colorSurface"
        android:orientation="vertical"
        android:padding="16dp"
        android:fitsSystemWindows="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/system_prompt"
            android:textStyle="bold"
            android:textSize="14sp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/sysBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:minLines="1"
            android:maxLines="4"
            android:gravity="top|start"
            android:inputType="textMultiLine|textNoSuggestions"
            android:imeOptions="actionDone"/>

        <Button
            android:id="@+id/newChatBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/newChat_button" />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/save_button" />


        <TextView
            android:id="@+id/recentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="@string/recChats_button"
            android:textStyle="bold" />

        <!-- List of chats -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="8dp" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>